<h1>Items</h1>

<% if @items.any? %>  
<table>
  <tr>
    <th>Name</th>
    <th>Resizor ID</th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= link_to item.name, item %></td>
    <td><%= item.image.id %></td>
    <td><img src="<%= item.image.url(:size => 'c100x100') %>"></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<% end %>

<%= link_to 'New item', new_item_path %>
